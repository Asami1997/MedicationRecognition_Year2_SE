<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.year2.medicationrecognition.UserOCR">

    <ImageView
        android:id="@+id/panadolImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/detailsID"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="83dp" />

     <Button
        android:id="@+id/button_processed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Take Image"
        android:onClick="openCamera"
         android:layout_alignParentBottom="true"
         android:layout_alignParentStart="true"
         android:layout_marginBottom="78dp" />


    <TextView
        android:id="@+id/detailsID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_processed"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:text="" />


</RelativeLayout>